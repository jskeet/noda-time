@model MarkdownPage

@{ ViewBag.Title = Model.Title; }

<section class="body">
    <div class="row">
        <div class="large-9 columns">
            <h1>@Model.Title</h1>
            @Model.Content
        </div>

        <div class="large-3 columns">
            <ul class="accordion" data-accordion>
                @foreach (var category in Model.Bundle.Categories)
                {
                    <li class="accordion-navigation">@category.Title</li>
                    <div class="content">
                    <ul class="side-nav">
                    @foreach (var contentPage in category.Pages)
                    {
                        <li><a href="@contentPage.Id">@contentPage.Title</a></li>
                    }
                    </ul>
                    </div>
                }
            </ul>
            @if (Model.Bundle.Name != "developer")
            {
                <footer>Version @Model.Bundle.Name</footer>
            }
        </div>
    </div>
</section>
