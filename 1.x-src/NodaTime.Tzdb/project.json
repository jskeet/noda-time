  "projectUrl": "http://nodatime.org/",
  "summary": "Package containing IANA time zone data ('TZDB').",
  "description": "Package containing IANA time zone data ('TZDB'). This package version is updated whenever IANA release a new version of the data. This package targets Noda Time 1.x (from 1.3.1 onwards); the 2.x version of this package targets Noda Time 2.x.",
  "tags": [ "iana", "timezone", "tzdb", "nodatime" ],
  "requireLicenseAcceptance": false,
  "repository": {
    "url": "https://github.com/nodatime/nodatime.git"
  },

  "compilationOptions": {
    "keyFile": "../../NodaTime Release.snk"
  },

  "compile": [
    "../NodaTime.Tzdb/*.cs"
  ],
  "resource": [
    "../../src/NodaTime/TimeZones/Tzdb.nzd"
  ],
  
  "dependencies": {
    "NodaTime": { "version": "1.3.1", "target": "package" }
  },

  "frameworks": {
    "net35-Client": {},
    "net40": {},
    ".NETPortable,Version=v4.0,Profile=Profile328": {
      "frameworkAssemblies": {
        "mscorlib": "",
        "System": "",
      }
    }
  }
}