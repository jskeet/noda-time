{
  "buildOptions": {
    "emitEntryPoint": true,
    "compile": [
      "*.cs",
      "../../lib/commandline/*.cs"
    ]
  },

  "configurations": {
    "Debug": {
      "buildOptions": {
        "define": [ "DEBUG", "TRACE" ]
      }
    },
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  },

  "dependencies": {
    "NodaTime": {
      "version": "1.1.1",
      "target": "package"
    },
    "System.Net.Http": "4.0.0"
  },

  "frameworks": {
    "net45": {
    }
  }
}