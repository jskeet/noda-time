{
  "configurations": {
    "Release": {
      "buildOptions": {
        "define": [ "RELEASE", "TRACE" ],
        "optimize": true
      }
    }
  },

  "buildOptions": {
    "keyFile": "../../NodaTime Release.snk",
    "emitEntryPoint": true,
    "optimize": true
  },

  "dependencies": {
    "BenchmarkDotNet": "0.9.9",
    "NodaTime": { "target": "project" },
    "NodaTime.Serialization.JsonNet": { "target": "project" },
    "NodaTime.Testing": { "target": "project" },
    "Newtonsoft.Json": "9.0.1"
  },

  "testRunner": "nunit",

  "frameworks": {
    "net45": {
      "frameworkAssemblies": {
        "System.Runtime": "",
        "System.Threading.Tasks": "",
        "System.Xml.Linq": ""
      }
    },
    "netcoreapp1.0": {
      "buildOptions": {
        "define": ["PCL"]
      },
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      }
    }
  }
}
